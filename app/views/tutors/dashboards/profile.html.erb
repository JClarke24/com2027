
<!DOCTYPE html>
<html>
<title>Edit your Profile</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<!-- <link rel="stylesheet" href="https://www.profileschools.com/profilecss/4/profile.css"> -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<body>
<button class = "btn edit-profile"><%= link_to "Edit profile", :edit_tutor_registration, style: "color:orange" %></button>
<!-- Page Container -->
<div class="profile-content profile-margin-top" style="max-width:1400px;">

  <!-- The Grid -->
  <div class="profile-row-padding">

    <!-- Left Column -->
    <div class="profile-third">

      <div class="profile-white profile-text-orange profile-card-4">
        <div class="profile-display-container">
          <%= image_tag(current_tutor.image_url, style: "max-width:100%; max-height:100%") %>
          <div class="profile-display-bottomleft profile-container profile-text-black">
            <h2> <%= current_tutor.forename + " " + current_tutor.surname %> </h2>
          </div>
        </div>
        <hr>
        <div class="profile-display-container">
          <p><i class="fa fa-briefcase fa-fw profile-margin-right profile-large profile-text-orange"></i><%= current_tutor.job %></p>
          <p><i class="fa fa-home fa-fw profile-margin-right profile-large profile-text-orange"></i><%= current_tutor.address + " " + current_tutor.country %></p>
          <p><i class="fa fa-envelope fa-fw profile-margin-right profile-large profile-text-orange"></i> <%= current_tutor.email %> </p>
          <p><i class="fa fa-phone fa-fw profile-margin-right profile-large profile-text-orange"></i> <%= current_tutor.phone %> </p>
          <br/>
          <div class="profile-display-bottomleft profile-container edit-profile">
          </div>
        </div>
        <hr>
        <div class="profile-container">
          <!-- Accordion -->
          <div class="profile-card profile-round">
            <div class="profile-white">
              <button onclick="myFunction('Demo1')" class="profile-button profile-block profile-theme-l1 profile-left-align"><i class="fa fa-circle-o-notch fa-fw profile-margin-right"></i> My Tutees</button>
              <div id="Demo1" class="profile-hide profile-container">
                <p> List of the tutees accounts...</p>
              </div>
              <button onclick="myFunction('Demo2')" class="profile-button profile-block profile-theme-l1 profile-left-align"><i class="fa fa-calendar-check-o fa-fw profile-margin-right"></i> My Events</button>
              <div id="Demo2" class="profile-hide profile-container">
                <p>Some text..</p>
              </div>
              <button onclick="myFunction('Demo3')" class="profile-button profile-block profile-theme-l1 profile-left-align"><i class="fa fa-users fa-fw profile-margin-right"></i> My Quizzes</button>
              <div id="Demo3" class="profile-hide profile-container">
             <div class="profile-row-padding">
             <br>
               <<div class="profile-half">
                 <img src="/profileimages/lights.jpg" style="width:100%" class="profile-margin-bottom">
               </div>
               <div class="profile-half">
                 <img src="/profileimages/nature.jpg" style="width:100%" class="profile-margin-bottom">
               </div>
               <div class="profile-half">
                 <img src="/profileimages/mountains.jpg" style="width:100%" class="profile-margin-bottom">
               </div>
               <div class="profile-half">
                 <img src="/profileimages/forest.jpg" style="width:100%" class="profile-margin-bottom">
               </div>
               <div class="profile-half">
                 <img src="/profileimages/nature.jpg" style="width:100%" class="profile-margin-bottom">
               </div>
               <div class="profile-half">
                 <img src="/profileimages/snow.jpg" style="width:100%" class="profile-margin-bottom">
               </div>
             </div>
              </div>
            </div>
          </div>
        </div><br>
      </div><br>

      <div class="profile-card profile-round profile-white profile-center">
        <div class="profile-container">
          <p>Upcoming Tutee Meeting:</p>
          <img src="/profileimages/forest.jpg" alt="Picture of the place of the meeting" style="width:100%;">
          <p><strong>Name of the tutee</strong></p>
          <p>What time </p>
          <p><button class="profile-button profile-block profile-theme-l4">Info</button></p>
        </div>
      </div>
      <br>
      <ul>
      <div class="profile-card profile-round profile-white profile-center">
          <div class="profile-container">
            <p>Tutee Request</p>
     <% @students = Student.where(tutor_id: current_tutor.id, tutor_confirmed: false)
        @students.each do |student| %>

     <li><h6><%= student["forename"] %> &nbsp; <%= student["surname"] %></h6>
       <div class="profile-row profile-opacity">
         <div class="profile-half">
       <%=button_to "Accept", {action: "acceptStudent", params: {:student_id => student["id"]}}, {class: 'profile-button profile-block profile-green profile-section'} %>
       </div>
         <div class="profile-half">
     <%=button_to "Reject", {action: "rejectStudent", params: {:student_id => student["id"]}}, {class: 'profile-button profile-block profile-red profile-section'} %>
   </li>

 </div>
    <%  end %>
    <% if @students.length == 0%>
      <p>You have no tutee requests at this time.</p>
      <%end %>
    </ul>
      </div>
      <br>

    <!-- End Left Column -->


    <!-- Right Column -->
    <div class="profile-twothird">

      <div class="profile-container profile-card profile-white profile-margin-bottom">
        <h2 class="profile-text-orange profile-padding-16"><i class="fa fa-suitcase fa-fw profile-margin-right profile-xxlarge profile-text-orange"></i>About me</h2>
        <div class="profile-container">
          <h5 class="profile-opacity"><b> What I do?</b></h5>
          <p> <%= current_tutor.description %> </p>
          <hr>
        </div>
        <div class="profile-container">
          <h5 class="profile-opacity"><b>What I offer?</b></h5>
          <p> <%= current_tutor.description2 %> </p>
          <hr>
        </div>
        <div class="profile-container">
          <h5 class="profile-opacity"><b>What is my rating?</b></h5>
          <p>How people rate me </p>
          <hr>
        </div>
      </div>

      <div class="profile-container profile-card profile-white">
        <h2 class="profile-text-orange profile-padding-16"><i class="fa fa-certificate fa-fw profile-margin-right profile-xxlarge profile-text-orange"></i>Education</h2>
        <div class="profile-container">
          <h5 class="profile-opacity"><b>Sample</b></h5>
          <h6 class="profile-text-orange"><i class="fa fa-calendar fa-fw profile-margin-right"></i>Forever</h6>
          <p>A description of one of my educations</p>
          <hr>
        </div>
        <div class="profile-container">
          <h5 class="profile-opacity"><b>London Business School</b></h5>
          <h6 class="profile-text-orange"><i class="fa fa-calendar fa-fw profile-margin-right"></i>2013 - 2015</h6>
          <p>Master Degree</p>
          <hr>
        </div>
        <div class="profile-container">
          <h5 class="profile-opacity"><b>School of Coding</b></h5>
          <h6 class="profile-text-orange"><i class="fa fa-calendar fa-fw profile-margin-right"></i>2010 - 2013</h6>
          <p>Bachelor Degree</p><br>
        </div>
      </div>

    <!-- End Right Column -->
    </div>



  <!-- End Grid -->
  </div>

  <!-- End Page Container -->
</div>
<script>
// Accordion
function myFunction(id) {
  var x = document.getElementById(id);
  if (x.className.indexOf("profile-show") == -1) {
    x.className += " profile-show";
    x.previousElementSibling.className += " profile-theme-d1";
  } else {
    x.className = x.className.replace("profile-show", "");
    x.previousElementSibling.className =
    x.previousElementSibling.className.replace(" profile-theme-d1", "");
  }
}

// Used to toggle the menu on smaller screens when clicking on the menu button
function openNav() {
  var x = document.getElementById("navDemo");
  if (x.className.indexOf("profile-show") == -1) {
    x.className += " profile-show";
  } else {
    x.className = x.className.replace(" profile-show", "");
  }
}
</script>
</body>
</html>

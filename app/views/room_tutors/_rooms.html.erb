<div class="mb-3">
  <%= link_to new_room_tutor_path, class: 'btn btn-primary' do %>
    Create a room
  <% end %>
</div>

<% if @room_tutors.present? %>
  <nav class="nav flex-column">
    <% @room_tutors.each do |room_tutor| %>
      <%= link_to room_tutor.name, room_tutor_path(room_tutor), class: 'nav-link room-tutor-nav-link' %>
    <% end %>
  </nav>
<% else %>
  <div class="text-muted">
    There are currently no rooms
  </div>
<% end %>

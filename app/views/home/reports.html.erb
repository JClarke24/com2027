<h2>Reports to review</h2>
<div id="reports">
  <table>
    <thead>
     <tr>
     <th>User type</th>
     <th>User ID</th>
     <th>Flag reason</th>
     <th>Flag description</th>
     <th>Warn</th>
     <th>Ban</th>
     </tr>
    </thead>
    <tbody>
      <% @reports = Report.where("action == 0") %>
     <% @reports.each do |report| %>
       <tr>
        <td><%= report.user_type %></td>
        <td><%= report.user_id %></td>
        <td><%= report.reason %></td>
        <td><%= report.description %></td>
        <td><%= button_to "Warn User", { action: "warnUser", report: report },
                                method: :post, data: { confirm: "Are you sure you wish to warn this user?" } %></td>
        <td><%= button_to "Ban User", { action: "banUser", report: report },
                                method: :post, data: { confirm: "Are you sure you wish to ban this user?" } %></td>
       </tr>
     <% end %>
    </tbody>
</div>
